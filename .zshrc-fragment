alias eh-backend='cd ~/workspace/easyhotel.docker-compose && docker-sync start && docker-compose up wordpress db_api db_wordpress memcached'
alias eh-down='cd ~/workspace/easyhotel.docker-compose && docker-compose down'
# Instead of 'npm start-dev', since that states PORT=3200 but docker-compose expects 3002
alias eh-api='cd ~/workspace/easyhotel.api && nvm use 12.10 && nodemon'
alias eh-react='cd ~/workspace/easyhotel.react && nvm use 10 && npm run build && ENABLE_HOT_RELOAD=TRUE node server.js'
alias eh-react-rel='cd ~/workspace/easyhotel.react && nvm use 10 && npm run release && npm start'
alias eh-redis='cd ~/workspace/easyhotel.docker-compose && redis-server --save "" --appendonly no'
alias eh-ra='redis-cli flushall && eh-redis & eh-api'
alias eh-ios='cd ~/workspace/easyhotel.mobile-app && yarn ios'
alias eh-and='adb devices && cd ~/workspace/easyhotel.mobile-app && yarn android'
alias eh-android='adb devices && cd ~/workspace/easyhotel.mobile-app && yarn android'
alias eh-gcp='cloud_sql_proxy -instances=univers-labs:europe-west1:easy-hotel-production=tcp:3007'
alias eh-gcps='cloud_sql_proxy -instances=univers-labs:europe-west1:ul-shared-mysql=tcp:3007'
alias eh-g='cd ~/workspace/easyhotel.geolocation && npm run start-dev'
alias eh-temp-trans='cd ~/workspace/easyhotel.react && npm run extract && npm run compile && ga lib/locales && gc -m "TEMP TRANSLATION COMMIT\n\nREMOVE FROM THIS BRANCH PRIOR TO CREATING PR" && cd -'
alias eh-trans='cd ~/workspace/easyhotel.react && npm run extract && npm run compile && ga lib/locales && gc -m "Update translations" && cd -'
alias eh-apk='cd ~/workspace/easyhotel.mobile-app && fastlane android apk && cp ~/workspace/easyhotel.mobile-app/android/app/build/outputs/apk/release/app-release.apk ~/Desktop && cd -'
alias eh-apk-copy='cp ~/workspace/easyhotel.mobile-app/android/app/build/outputs/apk/release/app-release.apk ~/Desktop && cd -'
alias eh-po-files='echo "Note you can ignore the error message if rm command fails" && rm -r ~/Desktop/translations || mkdir ~/Desktop/translations && cp -R ~/workspace/easyhotel.react/lib/locales ~/Desktop/translations/website && cp -R ~/workspace/easyhotel.mobile-app/src/locales ~/Desktop/translations/app && rm ~/Desktop/translations/**/*/*.js && rm -r ~/Desktop/translations/website/_build ~/Desktop/translations/app/index.ts'
alias eh-shef='wo && node ./index.js -c OWNSHEF -p ./credentials/shef-test.json -t'

